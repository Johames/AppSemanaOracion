<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:fitsSystemWindows="true">

    <include layout="@layout/content_mensajes" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/turnoM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/privado_select"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="MaÃ±ana" />

        <Button
            android:id="@+id/turnoT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Tarde"
            android:background="@drawable/general"/>

        <Button
            android:id="@+id/turnoN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/leidos"
            android:text="Noche"
            android:textAppearance="@style/TextAppearance.AppCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listaTurnoPrograma"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>